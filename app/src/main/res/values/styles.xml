<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/my_blue</item>
        <item name="colorPrimaryDark">@color/my_gray</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/my_blue</item>
        <item name="tabSelectedTextColor">@color/my_blue</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#757575</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">380dp</item>
        <item name="android:layout_height">220dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TextViewOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">bottom</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="TextViewTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

    <style name="LinearTwo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

</resources>